<div id="account-form">
    <%- include("../partials/signinNav") %>
    <form action="/account/create" method="post">
        <ul class="form-error-list"></ul>
        <fieldset>
            <legend>Register Account</legend>
            <p><span class="required-field"> </span>Indicates a required field</p>
            <label>
                <span class="required-field"> </span>First name</span>
                <input id="fname" name="fname" minlength="3" type="text" required>
            </label>
            <label>
                <span class="required-field"> </span>Last name
                <input id="lname" name="lname" minlength="3" type="text" required>
            </label>
            <label>
                <span class="required-field"> </span>Email
                <input id="email" name="email" type="email" 
                pattern="^\S+@\S+\.\S+$" required>
            </label>
            <label>
                <span class="required-field"> </span>Password
                <input id="password" name="password" type="password" min="8"
                pattern="^(?=.*\d)(?=.*[A-Z])(?=.*[a-z])(?=.*[^\w\d\s:])([^\s]){8,16}$" required>
            </label>
            <label>
                <span class="required-field"> </span>Password again
                <input id="passwordMatch" name="passwordMatch" type="password" min="8"
                    pattern="^(?=.*\d)(?=.*[A-Z])(?=.*[a-z])(?=.*[^\w\d\s:])([^\s]){8,16}$" required>
            </label>
            <button anim="shake" class="toggled" type="submit">Create My Account</button>
        </fieldset>
    </form>
</div>
<script type="module" src="/js/register.js"></script>